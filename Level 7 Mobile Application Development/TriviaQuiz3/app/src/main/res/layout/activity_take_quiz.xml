<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".TakeQuiz">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/db_quizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textColor="@color/Neon_Green"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingHorizontal="50sp"/>
        <TextView
            android:id="@+id/db_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/background_rounded_corners"
            android:backgroundTint="@color/Ivory"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:textColor="@color/Blue"/>
    <Button
        android:id="@+id/btn_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"/>
    <Button
        android:id="@+id/btn_answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"/>
    <Button
        android:id="@+id/btn_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"/>
    <Button
        android:id="@+id/btn_answer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"/>
    <TextView
        android:id="@+id/db_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:background="@drawable/background_rounded_corners"
        android:backgroundTint="@color/Ivory"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        android:textColor="@color/Blue"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_nextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:text="Next Question"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"
        android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>