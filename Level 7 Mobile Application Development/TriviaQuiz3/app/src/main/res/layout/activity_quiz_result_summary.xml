<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".QuizResultSummary">

    <TextView
        android:id="@+id/db_quizName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textColor="@color/Neon_Green"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingHorizontal="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_resultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@drawable/background_rounded_corners"
        android:backgroundTint="@color/Ivory"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_gravity="start"
        android:textColor="@color/Blue"/>
</LinearLayout>
    <Button
        android:id="@+id/btn_mainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/Neon_Green"
        android:padding="10dp"
        android:text="@string/return_to_main_menu"
        android:textAllCaps="false"
        android:textColor="@color/Ivory"
        android:textSize="25sp"
        android:layout_gravity="start"/>
</LinearLayout>