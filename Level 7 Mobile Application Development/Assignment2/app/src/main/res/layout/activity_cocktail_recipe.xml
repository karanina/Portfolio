                    android:text="@string/ingredient"
                    android:textColor="@color/dark_cream"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_ingredient14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/ingredient"
                    android:textColor="@color/dark_cream"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_ingredient15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/ingredient"
                    android:textColor="@color/dark_cream"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_glassType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/dark_cream"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_instructionsHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/instructions"
                    android:textColor="@color/dark_cream"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/dark_cream"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_addToFavourites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="30dp"
                    android:backgroundTint="@color/dusky_rose"
                    android:padding="15dp"
                    android:text="@string/add_to_favourites"
                    android:textAllCaps="false"
                    android:textColor="@color/crimson"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btn_removeFromFavourites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="30dp"
                    android:backgroundTint="@color/dusky_rose"
                    android:padding="15dp"
                    android:text="@string/remove_from_favourites"
                    android:textAllCaps="false"
                    android:textColor="@color/crimson"
                    android:textSize="25sp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
